<div ng-controller="LoginCtrl">
    <pre>{{message}}<span ng-show="user">, {{user.username}}</span>
        <span ng-show="user"><input type="button" ng-click="logout()" value="Logout" /></span><br>
        <span ng-show="user" style="text-align: left"><a href="/photos">Listings</a></span></pre>

    <div class="container">


        <form ng-submit="login()" ng-hide="user" class="form-signin">
            <input ng-model="userCreds.username" type="text" name="user" placeholder="Username" class="input-block-level" />
            <input ng-model="userCreds.password" type="password" name="pass" placeholder="Password" class="input-block-level" />
            <input type="submit" value="Login" class="btn btn-large btn-primary" />
        </form>

    </div> <!-- /container -->



</div>


<style type="text/css">
    body {
        padding-top: 40px;
        padding-bottom: 40px;
